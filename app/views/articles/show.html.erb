<div class="row">
	<div class="col-lg-8">
		<h1><%= @article.title%></h1>
		<p class="lead">by <%=@article.user.email%></p>
		<hr>
		<p>
			<span class="glyphicon glyphicon-time"></span>
			 Posted on <%=@article.created_at%>
		</p>
		
		<p class="lead"><%= raw @article.body%></p>
	</div>
	<div class="col-lg-4">
		<%= link_to 'Back', articles_path %>
	</div>
</div>